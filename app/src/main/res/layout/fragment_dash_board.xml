<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="#e9d3c4"
    tools:context=".View.DashBoard">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/dash_boad_logo"

                        />

                </LinearLayout>
            </RelativeLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@drawable/bottom_bg"
                android:rowCount="3"
                android:columnCount="2"
                >
                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="3"
                        android:gravity="center"
                        android:background="#6b705c"
                        >
                        <ImageView
                            android:layout_weight="2"
                            android:id="@+id/facultyImg"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/faculty"
                            android:layout_centerInParent="true"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Faculty"
                            android:layout_below="@id/facultyImg"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:textSize="18sp"
                            android:fontFamily="@font/segoregular"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/facultyID_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custor_ripple"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="3"
                        android:gravity="center"
                        android:background="#6d597a"
                        >
                        <ImageView
                            android:layout_weight="2"
                            android:id="@+id/coursesImg"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/courses"
                            android:layout_centerInParent="true"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Courses"
                            android:layout_below="@id/coursesImg"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:textSize="18sp"
                            android:fontFamily="@font/segoregular"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            />
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/coursesID_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custor_ripple"
                        />

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="3"
                        android:gravity="center"
                        android:background="#84a59d"
                        >
                        <ImageView
                            android:layout_weight="2"
                            android:id="@+id/feeImg"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/fee"
                            android:layout_centerInParent="true"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fee Structure"
                            android:layout_below="@id/feeImg"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:textSize="18sp"
                            android:fontFamily="@font/segoregular"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            />
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/feeID_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custor_ripple"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="3"
                        android:gravity="center"
                        android:background="#f28482"
                        >
                        <ImageView
                            android:layout_weight="2"
                            android:id="@+id/eventsImg"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/events"
                            android:layout_centerInParent="true"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Events"
                            android:layout_below="@id/eventsImg"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:textSize="18sp"
                            android:fontFamily="@font/segoregular"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            />
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/eventsID_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custor_ripple"
                        />

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="3"
                        android:gravity="center"
                        android:background="#495867"
                        >
                        <ImageView
                            android:layout_weight="2"
                            android:id="@+id/aboutUsImg"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/about_us"
                            android:layout_centerInParent="true"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About Us"
                            android:layout_below="@id/aboutUsImg"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:textSize="18sp"
                            android:fontFamily="@font/segoregular"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            />
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/aboutUsID_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custor_ripple"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="3"
                        android:gravity="center"
                        android:background="#e29578"
                        >
                        <ImageView
                            android:layout_weight="2"
                            android:id="@+id/faqImg"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/faq"
                            android:layout_centerInParent="true"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FAQs"
                            android:layout_below="@id/faqImg"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:textSize="18sp"
                            android:fontFamily="@font/segoregular"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            />
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/faqID_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custor_ripple"
                        />

                </androidx.cardview.widget.CardView>





            </GridLayout>
</LinearLayout>